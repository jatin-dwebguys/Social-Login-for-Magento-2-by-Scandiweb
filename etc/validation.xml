<validation>
    <entity name="sociallogin_customer">
        <rules>
            <rule name="check_eav">
                <entity_constraints>
                    <constraint alias="eav_data_validator" class="Scandiweb\SocialLogin\Model\Validator\Attribute\Data" />
                </entity_constraints>
            </rule>
        </rules>

        <groups>
            <group name="save">
                <uses>
                    <use rule="check_eav"/>
                </uses>
            </group>
        </groups>
    </entity>
</validation>